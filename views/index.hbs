<h1>{{title}}</h1>
<div id="map">

</div>
<div id="userLocation">
    <h3>Get Your Location Coordinates</h3>
    <form action="/addressCoords" method="get">
        <button id="address-coords">Address Location</button>
        <input id="address-input" type="text" name="address" placeholder="enter an address">
    </form><br>
    <button id="user-coords">Your Geo Location</button><span id="show-user-coords"></span>
</div>
<div id="save-data">
    <h3>Save A Location</h3>
    <form action="/save" method="post">
        <div class="input">
            <label for="name">Name :</label>
            <input type="text" id="name" name="name">
        </div>
        <div class="input">
            <label for="street">Street :</label>
            <input type="text" id="street" name="street">
        </div>
        <div class="input">
            <label for="city">City :</label>
            <input type="text" id="city" name="city">
        </div>
        <div class="input">
            <label for="state">State :</label>
            <input type="text" id="state" name="state">
        </div>
        <div class="input">
            <label for="zip">Zip :</label>
            <input type="text" id="zip" name="zip">
        </div>
        <button id="submit-data" type="submit">Save Location</button>
    </form>
</div>
<div id="list-data">
    <h3>Read Database</h3>
    <form>
        <p><button id="get-data" type="button">GET DATA</button></p>
    </form>
    <article id="add-data">
        {{#each locations}}
        {{/each}}
    </article>
</div>
